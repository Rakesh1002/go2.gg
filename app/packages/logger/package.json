    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@sentry/cloudflare": "^8.42.0"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5"
  }
