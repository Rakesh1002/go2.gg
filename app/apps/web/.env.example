# =============================================================================
# Go2 Web - Environment Variables
# =============================================================================
# Copy this file to .env.local for local development
# For Cloudflare Workers, use: wrangler secret put VARIABLE_NAME --env production
# =============================================================================

# -----------------------------------------------------------------------------
# Application URLs (Required)
# -----------------------------------------------------------------------------

NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8787

# -----------------------------------------------------------------------------
# Stripe (Required)
# -----------------------------------------------------------------------------
# Get from: https://dashboard.stripe.com/apikeys
# Use pk_test_ for development, pk_live_ for production

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# -----------------------------------------------------------------------------
# Analytics (Optional)
# -----------------------------------------------------------------------------

# PostHog - https://posthog.com
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# -----------------------------------------------------------------------------
# Cloudflare Turnstile (Optional - Bot Protection)
# -----------------------------------------------------------------------------
# Get from: https://dash.cloudflare.com/?to=/:account/turnstile

NEXT_PUBLIC_TURNSTILE_SITE_KEY=0x...

# -----------------------------------------------------------------------------
# Error Tracking (Optional)
# -----------------------------------------------------------------------------

# Sentry - https://sentry.io
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_AUTH_TOKEN=sntrys_...

# -----------------------------------------------------------------------------
# Site Configuration (Optional)
# -----------------------------------------------------------------------------

NEXT_PUBLIC_SITE_NAME=Go2
NEXT_PUBLIC_SITE_DESCRIPTION=The edge-native URL shortener
